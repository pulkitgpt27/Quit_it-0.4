<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id = "@+id/spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/background_dark"
        android:alpha="0.8">
        <ProgressBar
            android:id="@+id/spinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:progress="100"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/spinner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait.Finding your entry in our records."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Registeration"
            android:textSize="24sp"
            android:layout_margin="16dp"/>

        <EditText
            android:layout_marginTop="16dp"
            android:id="@+id/patient_id_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Email Id"
            android:layout_margin="16dp"/>

        <EditText
            android:layout_marginTop="16dp"
            android:id="@+id/patient_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Username"
            android:layout_margin="16dp"/>
        <EditText
            android:layout_marginTop="16dp"
            android:id="@+id/patient_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Password"
            android:layout_margin="16dp"/>
        <EditText
            android:layout_marginTop="16dp"
            android:id="@+id/patient_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Confirm Password"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/check_patient"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_gravity="end"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textSize="16sp"
            android:layout_margin="16dp"/>
    </LinearLayout>
</LinearLayout>